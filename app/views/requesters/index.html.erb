<div class="page-header">
  <h1>
    Requesters
    <a href="/requesters/new" class="btn btn-lg btn-success">New Requester</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @requesters.each do |requester| %>
      <tr>
        <td><%= requester.email %></td>
        <td><%= requester.password %></td>
        <td>
          <a href="/requesters/<%= requester.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @requesters, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
