<div class="page-header">
  <h1>
    Keywords
    <a href="/keywords/new" class="btn btn-lg btn-success">New Keyword</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @keywords.each do |keyword| %>
      <tr>
        <td>
          <a href="/keywords/<%= keyword.id %>" class="btn btn-primary">Show</a>
          <a href="/keywords/<%= keyword.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_keyword/<%= keyword.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
