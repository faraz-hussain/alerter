<!-- Validation failure messages -->
<% if @request.errors.any? %>
  <% @request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for requester_id -->
      <div class="form-group">
        <label for="requester_id" class="control-label">
          Requester
        </label>

        <%= select_tag(:requester_id, options_from_collection_for_select(Requester.all, :id, :email, @request.requester_id), :class => "form-control") %>
      </div>

      <!-- Label and input for keyword_id -->
      <div class="form-group">
        <label for="keyword_id" class="control-label">
          Keyword
        </label>

        <input type="text" id="keyword_id" name="keyword_id" placeholder="Keyword" class="form-control" value="<%= @request.keyword_id %>">
      </div>

      <!-- Label and input for action_id -->
      <div class="form-group">
        <label for="action_id" class="control-label">
          Action
        </label>

        <input type="text" id="action_id" name="action_id" placeholder="Action" class="form-control" value="<%= @request.action_id %>">
      </div>

      <button class="btn btn-success">
        Create Request
      </button>
      or
      <a href="/requests">Cancel</a>
    </form>
  </div>
</div>
